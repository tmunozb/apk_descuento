<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CORTESÍA"
            android:textAlignment="center"
            android:textColor="@color/fareazul"
            android:textSize="24sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:paddingTop="4dp"
            android:paddingBottom="12dp" />

        <!-- Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Planta -->
                <Spinner
                    android:id="@+id/sp_planta_cort"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spinner"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_dropdown" />

                <!-- Placa -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/placa"
                    app:counterEnabled="true"
                    app:counterMaxLength="7"
                    app:startIconDrawable="@drawable/ic_directions_car_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtPlaca_cort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapCharacters"
                        android:maxLength="7"
                        android:textAllCaps="true"
                        android:imeOptions="actionNext"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Motivo (editable con sugerencias si luego quieres) -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@string/motivo"
                    app:helperText="Describe brevemente el motivo"
                    app:helperTextEnabled="true"
                    app:startIconDrawable="@drawable/ic_note_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtMotivo_cort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences|textMultiLine"
                        android:minLines="2"
                        android:maxLines="4"
                        android:imeOptions="actionDone"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Autoriza -->
                <Spinner
                    android:id="@+id/sp_autoriza_cort"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spinner"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_dropdown" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardar_cort"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/agregar"
            app:icon="@drawable/ic_save_24"
            app:iconGravity="textStart"
            app:cornerRadius="16dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
