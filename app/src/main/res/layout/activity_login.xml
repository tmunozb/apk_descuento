<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#075190"
    tools:context="com.farenet.descuentos.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/top_button"
                android:padding="@dimen/basic_dimen"
                android:src="@drawable/logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/centro_login"
                android:background="@drawable/back_fond_white"
                android:orientation="vertical"
                android:padding="@dimen/basic_dimen">

                <EditText
                    android:id="@+id/etUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/back_edittext"
                    android:hint="@string/user"
                    android:inputType="text"
                    android:padding="@dimen/basic_dimen"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/etPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/back_edittext"
                    android:hint="@string/pass"
                    android:inputType="textPassword"
                    android:padding="@dimen/basic_dimen"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvMsgLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_login"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_red_light"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/back_button"
                    android:text="@string/btn_login"
                    android:textColor="@android:color/white"
                    android:textStyle="bold|normal" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
